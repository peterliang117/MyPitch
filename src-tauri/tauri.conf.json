{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MyPitch",
  "version": "0.2.0",
  "identifier": "com.mypitch.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "MyPitch",
        "width": 1100,
        "height": 720,
        "resizable": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ],
    "resources": {
      "resources/songs.csv": "resources/songs.csv",
      "../tools/audio_analyzer/analyze.py": "tools/audio_analyzer/analyze.py",
      "../tools/audio_analyzer/requirements.txt": "tools/audio_analyzer/requirements.txt"
    }
  }
}
